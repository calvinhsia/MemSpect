        <TextBlock Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="TextBlock1" Text="Identified leaks:" VerticalAlignment="Top" Width="182" />
        <TextBox Margin="351,40,12,40" Name="LeakSummaryTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
