        <ProgressBar x:Name="_ProgBar" HorizontalAlignment="Left" Height="15" Margin="10,0,0,0" VerticalAlignment="Top" Width="401"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.915,0.769" Width="359" >
                     <TextBlock x:Name="_txtBlk"
                            TextWrapping="Wrap" Text="TextBlock" Width="469" Height="36" />
              </TextBlock>
        <Button x:Name="_btnCancel" Content="_Cancel" Margin="417,0,0,0" VerticalAlignment="Top" IsCancel="True" RenderTransformOrigin="0.926,0.45"/>

    </Grid>
</Window>
